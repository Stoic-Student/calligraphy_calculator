<h3>Bereken zin</h3>

<div class="container">

  <form class="" action="index.html" method="post">
    <div class="row">
      <div class="col-12">
        <label class="form-label" for="formZin">Tekst</label>
        <textarea class="form-control" name="formZin" id="formZin" rows="1" cols="50"></textarea>
      </div>

      <div class="col-1">
        <label class= "form-label" for="">Letterafstand</label>
        <input class="form-control" type="number" name="formLetterafstand" id="formLetterafstand" placeholder="[mm]">
      </div>
      <div class="col-1">
        <label class= "form-label" for="">Woordafstand</label>
        <input class="form-control" type="number" name="formWoordafstand" id="formWoordafstand" placeholder="[mm]">
      </div>
      <div class="col-2">
        <label class= "form-label" for="formPenNibSelectie">Pen nib selectie</label>
        <!-- Dropdown lijst om pen nib te selecteren -->
        <!-- Speedball C2 is standaard actief -->
        <select class="form-select" class="" id="formPenNibSelectie">
          <option value="speedballC0">Speedball C0</option>
          <option value="speedballC1">Speedball C1</option>
          <option value="speedballC2" selected>Speedball C2</option>
          <option value="speedballC3">Speedball C3</option>
          <option value="speedballC4">Speedball C4</option>
          <option value="speedballC5">Speedball C5</option>
        </select>
      </div>
    </div>
    <br>
    <button id="knopZinBerekenen" type="submit" name="knopZinBerekenen" class="btn btn-primary">Zin berekenen</button>
    <button id="knopClearOutput" type="button" name="knopClearOutput" class="btn btn-warning">Reset output</button>
  </form>

</div>

